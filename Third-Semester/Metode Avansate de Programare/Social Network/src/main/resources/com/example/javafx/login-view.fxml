<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.LoginController" stylesheets="@../CSS/login-styles.css">

    <Label text="Log In"/>
    <Label fx:id="loginMessage" text=" " />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Log in" onAction="#onLoginClicked"/>
        <Button text="Sign up" onAction="#onSignUpClicked"/>
    </HBox>

</VBox>


